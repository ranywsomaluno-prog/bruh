    <script>
        // Alternar entre abas
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                
                tab.classList.add('active');
                document.getElementById(tab.dataset.tab).classList.add('active');
            });
        });
        
        // Atualizar valor do slider
        const slider = document.getElementById('mySlider');
        const sliderValue = document.getElementById('sliderValue');
        
        slider.addEventListener('input', () => {
            sliderValue.textContent = `${slider.value}%`;
        });
        
        // Botão de exemplo
        document.getElementById('exemploBtn').addEventListener('click', () => {
            alert('Botão de exemplo clicado!');
        });
        
        // Botão com número
        document.getElementById('numeroBtn').addEventListener('click', () => {
            const valor = document.getElementById('numeroInput').value;
            if (valor) {
                alert(`Número digitado: ${valor}`);
            } else {
                alert('Por favor, digite um número primeiro.');
            }
        });
        
        // Toggles
        document.querySelectorAll('.toggle-switch input').forEach(toggle => {
            toggle.addEventListener('change', function() {
                console.log(`Toggle ${this.id} está ${this.checked ? 'ativado' : 'desativado'}`);
            });
        });
    </script>
